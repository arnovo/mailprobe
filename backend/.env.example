# Copy to .env and adjust
APP_NAME="Mailprobe API"
DEBUG=false
API_V1_PREFIX=/v1

DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/mailprobe
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/mailprobe

REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

JWT_SECRET_KEY=change-me-in-production-use-long-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS: JSON array or comma-separated (3001 prod frontend, 3002 dev frontend)
CORS_ORIGINS=["http://localhost:3001","http://localhost:3000","http://localhost:3002","http://127.0.0.1:3002"]

RATE_LIMIT_PER_KEY=60
RATE_LIMIT_PER_USER=30
RATE_LIMIT_PER_WORKSPACE=100

PLAN_FREE_VERIFICATIONS_PER_MONTH=50
PLAN_FREE_API_KEYS=1
PLAN_PRO_VERIFICATIONS_PER_MONTH=500
PLAN_PRO_API_KEYS=5
PLAN_TEAM_VERIFICATIONS_PER_MONTH=2000
PLAN_TEAM_API_KEYS=20

RETENTION_INACTIVE_MONTHS=24
WEBHOOK_MAX_RETRIES=5
WEBHOOK_TIMEOUT_SECONDS=30
IDEMPOTENCY_TTL_SECONDS=86400
SMTP_TIMEOUT_SECONDS=8
SMTP_MAIL_FROM=noreply@mailcheck.local
# Web search (optional, per workspace)
# Each workspace can configure its provider and API key in Settings.
# Supported providers: 'serper' (Serper.dev, Google Search, 2500/month free) or 'bing' (deprecated August 2025).
# Example for Serper.dev:
# WEB_SEARCH_PROVIDER=serper
# WEB_SEARCH_API_KEY=your_serper_key_here
